<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scoreCard">
    
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="03dp"
                android:layout_marginRight="03dp"
                android:background="@color/yellow"
                android:padding="30dp"
                android:paddingBottom="40sp"
                android:text="@string/Block"
                android:textSize="20sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="05dp"
                android:layout_marginRight="10dp"
                android:background="@color/yellow"
                android:contentDescription="@string/gold"
                android:padding="10dp"
                android:src="@drawable/gold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="05dp"
                android:layout_marginRight="10dp"
                android:background="@color/yellow"
                android:contentDescription="@string/silver"
                android:padding="10dp"
                android:src="@drawable/silver" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="03dp"
                android:layout_marginRight="10dp"
                android:background="@color/yellow"
                android:contentDescription="@string/bronz"
                android:padding="10dp"
                android:src="@drawable/bronz" />


            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="20dp"
                android:background="@color/yellow"
                android:padding="30dp"
                android:paddingBottom="40dp"
                android:text="@string/Score"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/scoreCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>